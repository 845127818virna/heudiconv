{
  "name": "yuexinxi/heudiconv",
  "description": "Runs yuexinxi/heudiconv on a dicom scans and outputs nifti files in BIDS",
  "version": "1.0",
  "schema-version": "1.0",
  "image": "yuexinxi/heudiconv:latest",
  "type": "docker",
  "command-line": "heudiconv --files /dicom -o /nifti -f heuristic_sequence #SUBJECT_ID# -c dcm2niix -b --overwrite --minmeta",
  "override-entrypoint": true,
  "mounts": [
    {
      "name": "dicom_in",
      "writable": false,
      "path": "/dicom"
    },
    {
      "name": "nifti_out",
      "writable": true,
      "path": "/nifti"
    }
  ],
  "environment-variables": {},
  "ports": {},
  "inputs": [
    {
      "name": "subject_id",
      "description": "the ID of the subject",
      "type": "string",
      "required": true,
      "replacement-key": "#SUBJECT_ID#",
      "command-line-flag": "-s",
      "select-values": []
    }
  ],
  "outputs": [
    {
      "name": "nifti",
      "description": "the converted nifti files",
      "required": true,
      "mount": "nifti_out"
    }
  ],
  "xnat": [
    {
      "name": "heudiconv",
      "description": "Run yuexinxi/heudiconv on a session",
      "contexts": [
        "xnat:imageSessionData"
      ],
      "external-inputs": [
        {
          "name": "session",
          "description": "Input session",
          "type": "Session",
          "required": true,
          "provides-files-for-command-mount": "dicom_in",
          "load-children": true
        }
      ],
      "derived-inputs": [],
      "output-handlers": [
        {
          "name": "output",
          "accepts-command-output": "nifti",
          "as-a-child-of": "session",
          "type": "Resource",
          "label": "NIFTI",
          "tags": []
        }
      ]
    }
  ],
  "container-labels": {},
  "generic-resources": {},
  "ulimits": {},
  "secrets": []
}